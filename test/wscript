def options(opt):
    opt.load('unittest_gtest')


def configure(conf):
    conf.load('unittest_gtest')


def build(bld):
    bld.program(
        features='gtest',
        source=bld.path.ant_glob('*.cpp'),
        target='test',
        includes='../sigen_core',
        use='sigen BOOST_SYSTEM BOOST_FILESYSTEM GLOG')

